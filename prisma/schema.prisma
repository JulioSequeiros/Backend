datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Loja {
  id         Int         @id @default(autoincrement())
  name       String
  address    String
  imagem     String
  descricao  String
  email      String
  telefone   Int
  carrosLoja CarroLoja[]
}

model Frota {
  id          Int         @id @default(autoincrement())
  marca       String
  modelo      String
  descricao   String
  informacao  String
  precodiario Int
  imagem      String
  carrosLoja  CarroLoja[]
}

model CarroLoja {
  id      Int   @id @default(autoincrement())
  lojaId  Int
  carroId Int
  loja    Loja  @relation(fields: [lojaId], references: [id])
  carro   Frota @relation(fields: [carroId], references: [id])

  @@unique([lojaId, carroId])
}
